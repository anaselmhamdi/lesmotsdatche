FROM python:3.12-slim

WORKDIR /app

# Install uv and curl (keep curl for healthcheck)
ENV UV_INSTALL_DIR="/usr/local/bin"
RUN apt-get update && apt-get install -y --no-install-recommends curl && \
    curl -LsSf https://astral.sh/uv/install.sh | sh && \
    rm -rf /var/lib/apt/lists/*

# Copy dependency files only
COPY pyproject.toml uv.lock ./

# Install dependencies only (not the package itself)
RUN uv sync --frozen --no-install-project

# Source code will be mounted via volumes
# Create empty directories for mount points
RUN mkdir -p api domain generator language llm data seed

# Run with hot-reload
EXPOSE 8080
CMD ["uv", "run", "uvicorn", "api.routes:app", "--host", "0.0.0.0", "--port", "8080", "--reload"]
